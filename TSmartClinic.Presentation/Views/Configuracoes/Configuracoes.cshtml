@{
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
    ViewBag.Titulo = "Configurações";
}

<style>
    /* Selo "Em breve" discreto no canto */
    .card-overlay {
        position: absolute;
        top: 0.5rem;
        right: 0.75rem;
        background-color: rgba(220, 53, 69, 0.15); /* um pouco mais intenso */
        color: rgba(220, 53, 69, 0.85); /* texto mais vivo */
        padding: 0.2rem 0.6rem;
        font-size: 0.85rem;
        font-weight: 600;
        border-radius: 0.3rem;
        z-index: 10;
        pointer-events: none;
    }


    /* Estilo para "desativar" visualmente o card */
    .disabled-card {
        opacity: 0.5; /* deixa mais apagado */
        filter: grayscale(0.4); /* remove um pouco da cor */
        pointer-events: none; /* bloqueia cliques */
    }


</style>
<div class="container mt-4">
    <div class="row">

        <!-- Card: Central de Usuario -->
        <div class="col-md-4 mb-4">
            <div class="card card-menu h-100 shadow-sm position-relative bg-light-blue">
                <div class="card-body text-center d-flex flex-column">
                    <!-- Ícone com degradê -->
                    <div class="gradient-icon mb-3">
                        <i class="fa fa-users"></i>
                    </div>

                    <h5 class="card-title">Cadastro de Usuarios</h5>
                    <p class="card-description text-muted">
                        Gerencie os dados dos usuarios do sistema.
                    </p>

                    <!-- Botão com degradê -->
                    <a href="@Url.Action("Consulta", "Usuarios")"
                       class="btn btn-gradient mt-auto">
                        <i class="fa fa-chevron-right"></i>&nbsp;Acessar
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card card-menu h-100 shadow-sm position-relative bg-light-blue disabled-card">
                <!-- Selo "Em breve" no canto -->
                <div class="card-overlay">
                    <span>Em breve</span>
                </div>

                <div class="card-body text-center d-flex flex-column">
                    <div class="gradient-icon mb-3">
                        <i class="fa fa-users"></i>
                    </div>
                    <h5 class="card-title">Cadastro de Perfis</h5>
                    <p class="card-description text-muted">
                        Gerencie os dados dos perfis de acesso ao sistema.
                    </p>

                    <a href="#" class="btn btn-gradient mt-auto disabled" tabindex="-1" aria-disabled="true">
                        <i class="fa fa-lock"></i>&nbsp;Acessar
                    </a>
                </div>
            </div>
        </div>



    </div>
</div>




@{
    Layout = null;
}

@using Microsoft.AspNetCore.Antiforgery
@inject IAntiforgery Antiforgery
@model TSmartClinic.Presentation.Models.EsqueciSenhaViewModel

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>TSmartClinic - Esqueci minha Senha</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="~/main.css" rel="stylesheet">
    <link href="~/home.css" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            background: linear-gradient(rgba(0,169,143,0.8), rgba(0,100,85,0.9)), url('/images/bglogin.jpg') no-repeat center center;
            background-size: cover;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .login-container {
            width: 700px;
            height: 420px;
            display: flex;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 0 30px rgba(0,0,0,0.15);
            background-color: white;
        }

        .login-left {
            background: linear-gradient(135deg, #00c9a7, #92fe9d);
            color: #fff;
            padding: 40px 30px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: flex-start;
            text-align: center;
        }

            .login-left h2 {
                font-size: 28px;
                font-weight: bold;
            }

            .login-left p {
                font-size: 15px;
                margin-top: 10px;
            }

        .logo-tsmart {
            width: 80%;
            max-width: 220px;
            height: auto;
            display: block;
            margin-bottom: 10px;
        }

        .login-right {
            flex: 1;
            padding: 40px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

            .login-right h5 {
                text-align: center;
                margin-bottom: 20px;
            }

        .form-label-group {
            position: relative;
            margin-bottom: 20px;
        }

            .form-label-group i {
                position: absolute;
                top: 12px;
                left: 15px;
                color: #aaa;
            }

            .form-label-group input {
                padding-left: 40px;
                border-radius: 30px;
                height: 45px;
            }

        .form-control {
            width: 100%;
            border: 1px solid #ccc;
        }

        .btn-primary {
            background: linear-gradient(to right, #00c9a7, #92fe9d);
            border: none;
            border-radius: 30px;
            padding: 12px;
            color: #fff;
            font-weight: bold;
            width: 100%;
        }

            .btn-primary:hover {
                background: #00b59e;
            }

        a {
            color: #00a98f;
            text-decoration: none;
            font-size: 0.9rem;
        }

        .alert {
            margin-top: 15px;
        }

        #Email {
            width: 280px; /* defina a largura desejada */
            max-width: 100%; /* evita quebrar em telas pequenas */
            font-size: 1rem;
        }
    </style>
</head>

<body>
    @Html.AntiForgeryToken()

    <div class="login-container">

        <!-- Painel Esquerdo -->
        <div class="login-left">
            <div class="text-center mb-3">
                <img src="~/images/TSmart_Clinic_WhiteTSmart_Logo_HighRes.png" class="img-fluid logo-tsmart" />
            </div>
            <h2>Redefinir Senha</h2>
            <p>Informe seu e-mail para receber o link de redefinição.</p>
        </div>

        <!-- Painel Direito -->
        <div class="login-right">
            <h5 class="card-title text-center">
                <i class="fas fa-envelope-open-text"></i>&nbsp; Recuperar Senha
            </h5>

            @using (Html.BeginForm("EsqueciSenha", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-label-group">
                    <i class="fa fa-envelope"></i>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Digite seu e-mail", autocomplete = "off" })
                    <span class="text-danger">@Html.ValidationMessageFor(m => m.Email)</span>
                </div>

                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-paper-plane"></i> Enviar link de redefinição
                </button>

                <div class="text-center mt-4">
                    <a href="~/account/login">Voltar ao Login</a>
                </div>

                @if (TempData["MensagemSucesso"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @Html.Raw(TempData["MensagemSucesso"])
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }
                else if (TempData["MensagemErro"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @Html.Raw(TempData["MensagemErro"])
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }
            }
        </div>
    </div>
</body>
</html>
